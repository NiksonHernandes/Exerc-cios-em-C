#include <stdio.h>
#include <ctype.h>

int main()
{
    char nome[30];
    int i;


    printf("Digite o seu nome: ");
    gets(nome);


    if(isalpha(nome[i])){

        for(i=0; nome[i] != '\0'; i++)
            printf("\nCaractere %i: Letra: %c", i, nome[i]);
    }else {
        printf("Insira um caraceter!!");}






    return 0;
}
